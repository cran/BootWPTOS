citHeader("To cite the 'BootWPTOS' package in publications use:")

year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date, perl = TRUE)
vers <- paste("R package version", meta$Version)

citEntry(entry="Manual",
         title = "BootWPTOS: Test Stationarity using Bootstrap Wavelet Packet Tests",
         author = personList(as.person("Guy Nason"), as.person("Alessandro Cardinali")),
         year = year,
         note = vers,

         textVersion =
         paste("Alessandr Cardinali and Guy Nason (",
               year,
               "). BootWPTOS: Test Stationarity using Bootstrap Wavelet Packet Tests.",
               vers, ".", sep=""))

citEntry(entry="Article",
         title = "Practical Powerful Wavelet Packet Tests for Second-Order Stationarity",
         author = personList(c(as.person("A. Cardinali"),as.person("G. P. Nason"))),
	 journal = "Applied Computational Harmonic Analysis",
	volume=00,
	doi="10.1016/j.acha.2016.06.006",
         year     = "2016",
	pages="XXX--XXX",
         url      = "http://www.stats.bris.ac.uk/~guy",
         textVersion =
         paste("Cardinali, A. and Nason, G.P. (2016)",
		"Practical Powerful Wavelet Packet Tests for Second-Order Stationarity",
               "Applied Computational Harmonic Analysis, doi=10.1016/j.acha.2016.06.006")
)
